# Waiting room timeout in minutes
TEAMS_WAIT_FOR_LOBBY=10

# Debug mode: save screenshots (set to true to enable)
DEBUG_SCREENSHOTS=false

# Storage backend: 'local' or 'minio'
STORAGE_BACKEND=local

# MinIO settings (only required when STORAGE_BACKEND=minio)
MINIO_ENDPOINT=minio.example.com:9000
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_BUCKET=recordings
MINIO_SECURE=true

# Webhook configuration (optional)
# Called when a recording finishes saving (both local and MinIO)
# Leave empty to disable webhooks
WEBHOOK_URL=